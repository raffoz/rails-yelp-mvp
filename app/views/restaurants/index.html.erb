<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
<div class="restaurant-card">
      <span class="item">
      <%= restaurant.id %>. <%= restaurant.name %> [<%= restaurant.category %>]
      </span>
      <span>
      <%= link_to "Show", restaurant_path(restaurant) %>
      </span>
  </div>
<% end %>
