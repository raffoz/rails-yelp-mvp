<div>
  <h1><%= @restaurant.name %></h1>
  <div class="restaurant-details">
    Category: <%= @restaurant.category %><br>
    Address: <%= @restaurant.address %><br>
    Phone: <%= @restaurant.phone_number %>
  </div>

  <ul class="list-group mb-3">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item ">
      <span class="badge badge-primary badge-pill mr-2">
        <%= review.rating %><br>
      </span>
      <%= review.content %>
      </li>
    <% end %>
  </ul>

  <h1>Leave a review</h1>
  <div class="review-new">
    <%= simple_form_for [ @restaurant, @review ] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: 0..5 %>
      <div id="button-create-back">
        <%= f.submit "Submit review", class: "btn btn-primary mt-2" %>
        <%= link_to "Back to list", restaurants_path %>
      </div>
    <% end %>
  </div>

</div>
